@model IEnumerable<Calendar.Models.AppointmentListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Appointment Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @style = "color: white;" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfAppointment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfAppointment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AppointmentID }, new { @style = "color: red;" }) |
            @Html.ActionLink("Details", "Details", new { id=item.AppointmentID }, new { @style = "color: red;" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AppointmentID }, new { @style = "color: red;" })
        </td>
    </tr>
}

</table>
